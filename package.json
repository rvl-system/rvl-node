{
  "name": "rvl-node",
  "version": "6.3.1",
  "description": "A Node.js implementation of the RVL* library family based on Web Assembly",
  "main": "dist/index.js",
  "types": "declarations/index.d.ts",
  "directories": {
    "example": "example"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint-ts": "tslint src/**/*.ts",
    "build-ts": "tsc",
    "lint-cpp": "cpplint --quiet --linelength=120 --recursive --repository=src src/*",
    "build-cpp": "node scripts/build.js",
    "build": "npm run build-cpp && npm run build-ts",
    "postbuild": "node scripts/wave.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rvl-system/rvl-node.git"
  },
  "author": "Bryan Hughes <bryan@nebri.us>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/rvl-system/rvl-node/issues"
  },
  "homepage": "https://github.com/rvl-system/rvl-node#readme",
  "devDependencies": {
    "@types/node": "^20.8.0",
    "clone-deep": "^4.0.1",
    "tslint": "^6.1.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "strict-event-emitter-types": "^2.0.0"
  }
}